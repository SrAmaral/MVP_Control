datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String  @id() @default(cuid())
  email    String
  password String?
  role     Role?
}

model Role {
  id          Int          @id() @default(autoincrement())
  name        String
  description String?
  permissions Permission[]
  user        User         @relation(fields: [userId], references: [id])
  userId      String       @unique()
}

model Permission {
  id    Int    @id() @default(autoincrement())
  name  String
  roles Role[]
}
